<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen9"
    android:gravity="center_vertical"
    android:orientation="horizontal">



    <TextView
        android:textColor="@color/black"
        android:id="@+id/fixture_name"
        android:textSize="@dimen/text_size2"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="@dimen/dimen9"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen4"
        android:text="device_name" />

    <TextView
        android:id="@+id/fixture_state"
        android:text="State:On"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_marginRight="@dimen/dimen4"
        android:layout_height="@dimen/dimen7"
        android:layout_marginTop="@dimen/dimen1"/>

    <TextView
        android:background="@drawable/button_rect"
        android:id="@+id/button"
        android:text="Switch"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_marginRight="@dimen/dimen4"
        android:layout_height="@dimen/dimen7"
        android:layout_marginTop="@dimen/dimen1"/>

</LinearLayout>